# Template file for 'talloc'
pkgname=talloc
version=2.3.0
revision=1
build_style=waf3
configure_script="./buildtools/bin/waf"
hostmakedepends="pkg-config python3-devel docbook2x"
makedepends="libtirpc-devel python3-devel libxslt gettext-devel"
short_desc="Hierarchical pool based memory allocator with destructors"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-3.0-or-later"
homepage="https://talloc.samba.org/"
distfiles="http://samba.org/ftp/${pkgname}/${pkgname}-${version}.tar.gz"
checksum=75d5bcb34482545a82ffb06da8f6c797f963a0da450d0830c669267b14992fc6

configure_args="
--prefix=/usr
--libdir=/usr/lib
--sysconfdir=/etc
--localstatedir=/var
--disable-rpath
--disable-rpath-install
--builtin-libraries=replace
--bundled-libraries=NONE
--without-gettext
"

# FIXME: --without-gettext is somehow not effective when cross-compiling...

pre_configure() {
	if [ "$CROSS_BUILD" ]; then
		configure_args+="
		--cross-compile
		--hostcc=cc
		--cross-answers=cross.answers
		"
		cp ${FILESDIR}/cross.answers .
		sed -i "s,@@XBPS_TARGET_MACHINE@@,$XBPS_TARGET_MACHINE,g" cross.answers
	fi
}

talloc-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/libtalloc.so
		vmove usr/share/man/man3
	}
}

#TODO: place and naming for arch-dependent python modules
talloc-python3_package() {
	short_desc+=" - python3 bindings"
	pkg_install() {
		vmove ${py3_sitelib}
		#FIXME: shlibs!
		vmove usr/lib/libpytalloc-util.cpython*
	}
}