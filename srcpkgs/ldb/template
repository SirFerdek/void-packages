# Template file for 'ldb'
pkgname=ldb
version=2.0.7
revision=1
build_style=waf3
configure_script="./buildtools/bin/waf"
hostmakedepends="pkg-config python3-devel docbook2x"
makedepends="python3-devel libxslt gettext-devel libtdb tdb-devel tdb-python3 tevent-devel tevent-python3 talloc-devel popt-devel cmocka-devel lmdb-devel"
short_desc="An LDAP-like database from samba"
maintainer="Yuusha Spacewolf <xyuusha@paranoici.org>"
license="LGPL-3.0-or-later"
homepage="https://www.samba.org/ldb/"
distfiles="https://www.samba.org/ftp/pub/ldb/ldb-${version}.tar.gz"
checksum=4f6e6c1e23d286e2c0a246938970661d7e38d5bb3ba88a1fcd24b101257c6bfc

configure_args="
--prefix=/usr
--libdir=/usr/lib
--sysconfdir=/etc
--localstatedir=/var
--disable-rpath
--disable-rpath-install
--builtin-libraries=replace
--bundled-libraries=NONE
--without-gettext
"

# FIXME: --without-gettext is somehow not effective when cross-compiling...


if [ "$CROSS_BUILD" ]; then
hostmakedepends+=" tdb-python3 tevent-python3"
fi

pre_configure() {
	if [ "$CROSS_BUILD" ]; then
		configure_args+="
		--cross-compile
		--hostcc=cc
		--cross-answers=cross.answers
		"
		cp ${FILESDIR}/cross.answers .
		sed -i "s,@@XBPS_TARGET_MACHINE@@,$XBPS_TARGET_MACHINE,g" cross.answers
	fi
}

ldb-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		# vmove "usr/lib/*.so"
		vmove "usr/lib/libpyldb*.so"
		vmove usr/lib/libldb.so
		vmove usr/share/man/man3
	}
}

#TODO: place and naming for arch-dependent python extensions
ldb-python3_package() {
	short_desc+=" - python3 bindings"
	depends="${sourcepkg}>=${version}_${revision}"
	python_version=3
	pycompile_module="_ldb_text.py"
	pycompile_version=${py3_ver}
	pkg_install() {
		vmove ${py3_sitelib}
		#FIXME: shlibs!
		vmove usr/lib/libpyldb-util.cpython*
	}
}